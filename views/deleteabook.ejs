<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home Page</title>
    <link rel="stylesheet" href="/style">
</head>
<body>
    <div id="title">
        <h1>Delete a book</h1>
    </div>
    <br>
    <br>
    <div id="book_list">
        <table>
            <% let i = 0 %>
            <% books.forEach (books => {%>
            <form action="<%= `book/${books.name}/delete?_method=DELETE` %>" method="POST">
                <% i++ %>
                <tr>
                    <td><button type= "submit" onclick="return confirm('Are you sure you want to delete this record?')">X</button>
                    <label><%= books.name%></label></td>
                </tr>
            </form>
            <% }); %>
        </table>
    </div>
    <div class="nav">
        <%- include('partials/nav') %>
    </div>
</body>
</html>